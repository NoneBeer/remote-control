    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
  },
  "include": [
    "src/**/*",
    "index.ts"
  ],
  "exclude": [
    "front/**/*"
  ],
  "ts-node": {
    "esm": true
  }
}